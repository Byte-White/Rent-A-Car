@model Rent_A_Car.Models.Request

@{
    ViewData["Title"] = "Request Details";
}

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="card-title text-center mb-4">Request Information</h4>

        <dl class="row">
            <dt class="col-sm-3 text-muted">Car</dt>
            <dd class="col-sm-9">
                @if (Model.Car != null)
                {
                    <span class="badge bg-info">@Model.Car.Model</span>
                }
                else
                {
                    <em class="text-danger">No car assigned</em>
                }
            </dd>

            <dt class="col-sm-3 text-muted">Start Date</dt>
            <dd class="col-sm-9">
                <span class="fw-bold">@Model.StartDate.ToString("yyyy-MM-dd")</span>
            </dd>

            <dt class="col-sm-3 text-muted">End Date</dt>
            <dd class="col-sm-9">
                <span class="fw-bold">@Model.EndDate.ToString("yyyy-MM-dd")</span>
            </dd>

            <dt class="col-sm-3 text-muted">User</dt>
            <dd class="col-sm-9">
                @if (Model.User != null)
                {
                    <span class="fw-bold">@Model.User.FirstName @Model.User.LastName</span>
                    <div>Email: @Model.User.Email</div>
                    <div>EGN: @Model.User.EGN</div>
                }
                else
                {
                    <em class="text-danger">User not found</em>
                }
            </dd>
        </dl>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>
        </div>
    </div>
</div>
